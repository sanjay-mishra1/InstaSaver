<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_items_relative"
    android:layout_width="match_parent"
     android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:paddingBottom="30dp"
    android:paddingTop="1dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Select An Option"
        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/dialogTitle"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/optionLinear"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/one"
            android:layout_width="120dp"
            android:layout_marginStart="5dp"
            android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                 android:scaleType="center"
                android:id="@+id/profileimage"
                 />

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profilename"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two"

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_two_colors_one"
                android:scaleType="center"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_person_add_black_24dp"
                android:tint="#fff" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Other user Profile"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/three"

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
             android:foreground="?attr/selectableItemBackground"
            android:gravity="center|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circular_two_colors_three"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_wallpaper_black_24dp"
                android:tint="#fff" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="See Post"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal"
        android:id="@+id/enterLinkLiner"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="300dp"
            android:hint="Eg. www.instagram.com/nasa"
            android:textSize="18sp"
            android:id="@+id/accountLink"
            android:textColor="#000"
            android:inputType="textWebEditText"
            android:background="#d9d9d9"
            android:gravity="center_vertical"
            android:padding="5dp"
             android:layout_gravity="center_vertical"
            android:layout_height="35dp" />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/loadAccountButton"
             android:layout_height="45dp"
            android:textColor="#fff"
            android:backgroundTint="#000"
            android:layout_marginStart="10dp"
            android:layout_gravity="end"
            android:text="Go"/>

    </LinearLayout>

</LinearLayout>
